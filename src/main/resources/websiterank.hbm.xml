<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ashrafishak.calltransfer.entity.Account" table="account">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="acctNum" type="string">
            <column name="acct_num" not-null="true" unique="true" />
        </property>
    </class>
    
     <class name="com.ashrafishak.calltransfer.entity.Agent" table="agent">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" not-null="true" unique="true" />
        </property>
    </class>
    
    <class name="com.ashrafishak.calltransfer.entity.Date" table="date">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="date" type="date">
            <column name="date" />
        </property>
    </class>
    
    
    <class name="com.ashrafishak.calltransfer.entity.User" table="user">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" not-null="true" unique="true" />
        </property>
        <property name="apiToken" type="string">
            <column name="api_token" unique="true" />
        </property>
    </class>
    
